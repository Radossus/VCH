<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1"">
	<title>{ifset title}{include title|stripHtml} | {/ifset}Večery chval</title>
	<link href="{$basePath}/css/admin_screen.css" rel="stylesheet" type="text/css" >
	<link href="{$basePath}/css/map.css" rel="stylesheet" type="text/css" >
	<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
	<script src="{$basePath}/bootstrap/js/bootstrap.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
	<script src="https://npmcdn.com/flatpickr/dist/l10n/cs.js"></script>
</head>

<body>

<div id="wrapper">
    <div class="bg-dark text-white  pl-3 pt-1"><a class="text-white text-decoration-none" n:href="Homepage:default" target="_blank"><span data-feather="globe"></span> Homepage vecerychval.cz </a></div>
	<div class="container-fluid">
		<div class="row bg-dark text-white pl-3">
				<div class="col-sm-8"></a><span class="display-4""><a class="text-white text-decoration-none" n:href="Administrace:default">Administrace</a></span></div>
				<div class="col-sm-4"><span class="float-right">
						<a n:href="UserProfile:default" class="text-white"><span class="rounded-circle bg-info  border border-light p-2 mr-1"><span  data-feather="user"></span></a>{$userIdentity->username} <a n:href="Prihlaseni:out" class="btn btn-primary"><span data-feather="log-out"></span> Odhlášení</a></span>
				</div>
		</div>
	</div>


	<div class="container-fluid">
		<main class="row">

			<div class="col-md-2 d-md-block sidebar navbar-light">
				<div class="sidebar-sticky">
					<ul class="nav flex-column pt-2">
						<li class="nav-item pb-1">
							<a class="nav-link badge-info" n:href="Administrace:default">
								<span data-feather="home"></span>
								Dashboard
							</a>
						</li>
						<li class="nav-item pb-1">
							<a class="nav-link badge-info" n:href="Administrace:termin">
								<span data-feather="calendar"></span>
								Termíny
							</a>
						</li>
						<li class="nav-item pb-1">
							<a class="nav-link badge-info" n:href="Administrace:stranka">
								<span data-feather="file"></span>
								Stránky
							</a>
						</li>
						<li class="nav-item pb-1">
							<a class="nav-link badge-info" n:href="Administrace:post">
								<span data-feather="book-open"></span>
								Blog
							</a>
						</li>
						{if $user->isInRole('superadmin')}
							<li class="nav-item pb-1">
								<a class="nav-link badge-info" n:href="Administrace:mesto">
									<span data-feather="compass"></span>
									Města
								</a>
							</li>
							<li class="nav-item pb-1">
								<a class="nav-link badge-info" n:href="Administrace:uzivatel">
									<span data-feather="user"></span>
									Uživatelé
								</a>
							</li>
							<li class="nav-item pb-1">
								<a class="nav-link badge-info" n:href="Administrace:slider">
									<span data-feather="image"></span>
									Slider
								</a>
							</li>
							<li class="nav-item pb-1">
								<a class="nav-link badge-info" n:href="Administrace:prehled">
									<span data-feather="eye"></span>
									Přehledy
								</a>
							</li>

						{/if}
					</ul>
				</div>
			</div>

			<main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
				<div  id="main-contend">
					{foreach $flashes as $flash}
						<div class="flash {$flash->type} alert alert-primary">{$flash->message}</div>
					{/foreach}
					{include content}
				</div>
			</main>
		</div> <!-- end row -->
</div>



	<!-- Icons -->
	<script src="https://unpkg.com/feather-icons/dist/feather.min.js"></script>
	<script>
		feather.replace()
	</script>
</body>
</html>











































	{block scripts}
	<script src="https://nette.github.io/resources/js/3/netteForms.min.js"></script>
	{/block}

